<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Activity.MainActivity">

    <Button
        android:textSize="18dp"
        android:background="@drawable/button_round"
        android:id="@+id/apply"
        android:textColor="#fff"
        android:text="Apply"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </Button>

    <TextView
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/statusText"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:textColor="#000"
        android:text="Not Confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        app:cardBackgroundColor="#FFF8B2"
        android:id="@+id/cardView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/name"
                    android:hint="Name as per NID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <EditText
                    android:id="@+id/fatherName"
                    android:hint="Father's name as per NID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <EditText
                    android:id="@+id/motherName"
                    android:hint="Mother's name as per NID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>
                <EditText
                    android:id="@+id/birthDate"
                    android:hint="Date of Birth as per NID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textColor="#000"
                        android:textSize="18dp"
                        android:text="Account: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/accountYes"
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/accountNo"
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </androidx.appcompat.widget.AppCompatCheckBox>

                </LinearLayout>

                <EditText
                    android:inputType="number"
                    android:id="@+id/balance"
                    android:hint="Account Balance:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </EditText>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:background="@drawable/button_ripple2"
                        android:textColor="#fff"
                        android:id="@+id/back"
                        android:text="back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:background="@drawable/button_ripple2"
                        android:textColor="#fff"
                        android:id="@+id/confirm"
                        android:text="confirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </Button>

                </LinearLayout>


            </LinearLayout>



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>